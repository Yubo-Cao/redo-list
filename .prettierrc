{
    "singleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true,
    "importOrder": [
        "^(\\.+/)*@?features/(.*)$",
        "^(\\.+/)*@?api/(.*)$",
        "^(\\.+/)*@?lib/(.*)$",
        "^(\\.+/)*@?components/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
